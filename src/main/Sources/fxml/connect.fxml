<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="anchorPane" prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/16" fx:controller="it.polimi.ingsw.view.gui.controllers.ConnectController">
   <children>
      <Label layoutX="500.0" layoutY="305.0" text="IP Address:"/>
      <Label layoutX="499.0" layoutY="340.0" text="Server port:"/>
